<div class='auth__container'>
  <%= image_tag 'moutain.jpg', class: 'auth__background'%>
  <div class='auth__form'>
    <div class='third-space__logo third-space__logo--white'></div>
    <h4 class="mb-1">Sign up</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group <%= display_devise_has_danger(:first_name) %>">
        <%= fa_icon('user-o', class: 'auth__icon') %>
        <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name',
        class: 'form-control auth__input' %>
        <%= display_devise_form_control_feedback(:first_name) %>
      </div>

      <div class="form-group <%= display_devise_has_danger(:last_name) %>">
        <%= fa_icon('user-o', class: 'auth__icon') %>
        <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name',
        class: 'form-control auth__input' %>
        <%= display_devise_form_control_feedback(:last_name) %>
      </div>

      <div class="form-group <%= display_devise_has_danger(:email) %>">
        <%= fa_icon('envelope-o', class: 'auth__icon') %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email',
        class: 'form-control auth__input' %>
        <%= display_devise_form_control_feedback(:email) %>
      </div>

      <div class="form-group <%= display_devise_has_danger(:password) %>">
        <%= fa_icon('lock', class: 'auth__icon') %>
        <%= f.password_field :password, autocomplete: 'off',
            placeholder: "Password", class: 'form-control auth__input' %>
        <% if @minimum_password_length %>
          <div class="auth__help-text">
            *at least <%= @minimum_password_length %> characters
          </div>
        <% end %>
        <%= display_devise_form_control_feedback(:password) %>
      </div>

      <div class="form-group <%= display_devise_has_danger(:password_confirmation) %>"">
        <%= fa_icon('lock', class: 'auth__icon') %>
        <%= f.password_field :password_confirmation, autocomplete: 'off',
            placeholder: 'Password Confirmation', class: 'form-control auth__input' %>
        <%= display_devise_form_control_feedback(:password_confirmation) %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn--third-space btn-block' %>
      <hr class="auth__hr"/>
    <% end %>

    <%- if controller_name != 'sessions' %>
      <%= link_to "Sign in", new_session_path(resource_name), class: "nav-link white" %><br />
    <% end -%>
  </div>
</div>
