<div class='auth__container'>
  <%= image_tag 'moutain.jpg', class: 'auth__background'%>
  <div class='auth__form'>
    <div class='third-space__logo third-space__logo--white'></div>
    <h4 class="mb-1">Sign in</h4>
    <%= render 'auth_messages' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='form-group'>
        <%= fa_icon('envelope-o', class: 'auth__icon') %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email',
            class: 'form-control auth__input' %>
      </div>

      <div class='form-group'>
        <%= fa_icon('lock', class: 'auth__icon') %>
        <%= f.password_field :password, autocomplete: 'off', placeholder: 'Password',
            class: 'form-control auth__input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class='form-check'>
          <%= f.label :remember_me, class: 'custom-control custom-checkbox' do %>
            <%= f.check_box :remember_me, class: 'custom-control-input' %>
            <span class='custom-control-indicator'></span>
            <span class='custom-control-description'>Remember me</span>
          <% end %>
        </div>
      <% end %>

      <%= f.submit 'Sign in', class: 'btn btn--third-space btn-block' %>
      <hr class="auth__hr"/>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create Account", new_registration_path(resource_name), class: 'white link--white-action' %>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'white link--white-action float-xs-right' %>
    <% end -%>
  </div>
</div>
