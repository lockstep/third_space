<%- [:notice, :info, :warning, :error, :alert].each do |kind| -%>
  <%- next if flash[kind].blank? -%>
  <%
    alert_type = case kind
      when :notice
        'success'
      when :error
        'danger'
      when :info
        'info'
      when :warning, :alert
        'warning'
      end
  %>
  <div class="alert alert-dismissable alert-<%= alert_type %> notice fade in" role="alert">
    <button class="close" data-dismiss="alert" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= flash[kind] %>
  </div>
<%end%>
