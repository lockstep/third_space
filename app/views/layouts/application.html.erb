<!DOCTYPE html>
<html>
  <head>
    <title>Third Space Thinking</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body class='<%= "#{action_name} #{controller_name}" %>'>
    <nav class="navbar navbar-full navbar-light bg-faded">
      <a class="navbar-brand pull-right" href="<%= root_path %>"><%= fa_icon('cube') %> TST APP</a>
      <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
      <div class="collapse navbar-toggleable-md" id="navbarResponsive">
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="<%= root_path %>"><%= fa_icon('home') %> Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item"><a class="nav-link" href="#"><%= fa_icon('link') %> Link 1</a></li>
          <li class="nav-item"><a class="nav-link" href="#"><%= fa_icon('link') %> Link 2</a></li>
          <li class="nav-item">
            <%= link_to fa_icon('sign-out') + ' Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container" style="padding-top: 10px;">
      <%= yield %>
    </div>
  </body>
</html>
