<div id="tipOverlay" class="tip__overlay">
  <div class="tip__overlay-content">
    <div class="swiper-container tip__swiper-container">
      <div class="swiper-wrapper tip__swiper-wrapper">
       <% tips.each_with_index do |tip, index| %>
          <div class="swiper-slide tip__swiper-slide">
            <h5>EXAMPLE <%= index+1 %></h5>
            <div>
              <%= tip %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="swiper-pagination tip__swiper-pagination"></div>
    </div>
    <button type="button" onclick="closeTip()" class="close tip__close-button">
      <span class="white" aria-hidden="true">&times;</span>
    </button>
  </div>
</div>

