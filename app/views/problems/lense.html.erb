<div class="lens">
  <%= render 'layouts/shared/navbar_top', title: 'TST A C E I T', icon: 'link'%>

  <div class='image-aceit'>
    <%= image_tag("#{@lense}.png", class: 'w-100') %>
    <div class='aceit-overlay'>
      <%= image_tag("#{@lense}_icon.svg") %>
    </div>
    <div class='tip__icon' onclick="openTip()"></div>
  </div>

  <%= form_tag update_lense_problem_path(@problem), method: :put  do %>
    <div class='card-header lens__header' role='tab'>
      <span>What is a solution through this lens?</span>

    </div>

    <div class='form-group'>
      <textarea name='problem[<%= @lense %>]' class='form-control lens__textarea'
        placeholder='Write solution here'><%= @problem.send(@lense) %></textarea>
    </div>

    <nav id='next-bar' class='navbar navbar-fixed-bottom lens__submit-btn'>
      <%= hidden_field 'problem', 'id', value: current_user.id %>
      <%= hidden_field 'problem', 'lense', value: @lense %>
      <center>
        <%= submit_tag @lense == 'thinking' ? 'Complete' : "Continue to #{Problem.next_lens(@lense).titleize.humanize}",
        class: 'btn btn-link white' %>
      </center>
    </nav>
  <% end %>

